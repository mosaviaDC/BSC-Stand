<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSC_Stand.Views.Windows"
        xmlns:ViewModels="clr-namespace:BSC_Stand.ViewModels" 
        x:Class="BSC_Stand.Views.Windows.MenuWindow"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:configWindows ="clr-namespace:BSC_Stand.Views"
        xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ЭО БСК" Background="White" Width="1080" Height="720" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.DataContext>
        <ViewModels:MenuWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Menu Height="45" VerticalAlignment="Top">
            <Menu.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuBarColorKey}}"/>
            </Menu.Background>
            
         


        </Menu>
        <Grid Margin="0,45,0,45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="0.3*"></ColumnDefinition>
                <ColumnDefinition Width="0.7*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GroupBox  Padding="0" x:Name="StandConfiguration" Grid.Column="0">
                <configWindows:ConfigurationStandView></configWindows:ConfigurationStandView>
            </GroupBox>
            <GroupBox Padding="0" Grid.Column="1"   >
                <configWindows:StandVizualizationView></configWindows:StandVizualizationView>
            </GroupBox>
          
            <GridSplitter Grid.Column="0" VerticalAlignment="Stretch" Width="5" HorizontalAlignment="Right">
                
            </GridSplitter>
            


        </Grid>
        <StatusBar Height="45" VerticalAlignment="Bottom">
            <StatusBar.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuBarColorKey}}"/>
            </StatusBar.Background>
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock Text="Техническое Сообщение 1">

                </TextBlock>
                
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock Text="Техническое Сообщение 2">

                </TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Center">
                <ProgressBar Width="150" Value="75" SmallChange="0.01" >

                </ProgressBar>
            </StatusBarItem>
            


        </StatusBar>
        
        
        
    </Grid>

</Window>
