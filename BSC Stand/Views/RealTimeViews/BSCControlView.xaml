<UserControl x:Class="BSC_Stand.Views.BSCControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSC_Stand.Views"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding BSCControlViewModel,Source={StaticResource ViewModelLocator}}"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
             
            </Grid.RowDefinitions>
            <GridSplitter Height="3" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"></GridSplitter>
            <TextBlock Height="15" VerticalAlignment="Top" HorizontalAlignment="Stretch"   Text="Статус модулей "></TextBlock>
            <TreeView Margin="0,30,0,0">
                <TreeViewItem IsExpanded="True" Header="Овен">
                    <TextBlock Text="{Binding OwenTemperature}"></TextBlock>
                    <TextBlock Text="Температура ИБХА"></TextBlock>
                    <TextBlock Text="{Binding OwenConnectStatus}"></TextBlock>
                </TreeViewItem>
                
                
                
                <TreeViewItem Header="Шина 27 В" IsExpanded="True">
                    <TextBlock Text="?"></TextBlock>
                    <TextBlock Text="?"></TextBlock>
                    <TextBlock Text="Статус подключения"></TextBlock>
                </TreeViewItem>

                <TreeViewItem Header="Шина 100 В" IsExpanded="True">
                    <TextBlock Text="?"></TextBlock>
                    <TextBlock Text="?"></TextBlock>
                    <TextBlock Text="Статус подключения"></TextBlock>
                </TreeViewItem>
            </TreeView>


     
        </Grid>
        <oxy:PlotView Grid.Column="1"  Model="{Binding  GraphView}">

        </oxy:PlotView>

        <GridSplitter Width="3" VerticalAlignment="Stretch"></GridSplitter>
        
    </Grid>
</UserControl>
