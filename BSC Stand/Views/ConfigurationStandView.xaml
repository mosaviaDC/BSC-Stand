                                    <ColumnDefinition Width="0.3*">

                                    </ColumnDefinition>
                                </Grid.ColumnDefinitions>


                                <TextBlock Grid.Row="0" Grid.Column="0" Margin="10" Text="Min Value"></TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="1" Margin="10">Max value</TextBlock>
                                <TextBox Grid.Row="1" Grid.Column="0" Margin="10"  x:Name="test" Text="{Binding SelectedItem.MinValue, ElementName=configurationModesList}" Cursor="IBeam"  >
                                    <behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger EventName="MouseWheel" x:Name="test1">
                                            <behaviors:InvokeCommandAction Command="{Binding MouseWheelHandleCommand}" CommandParameter="{Binding Source , ElementName=test1}"/>
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>
                                   
                                    
                                </TextBox>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="10" Text="{Binding SelectedItem.MaxValue, ElementName=configurationModesList}"  Cursor="IBeam"  ></TextBox>

                            </Grid>
                            
                            
